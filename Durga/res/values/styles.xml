<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/action_bar_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppThemeFullYellow" parent="AppBaseTheme">
        <item name="colorPrimary">@color/action_bar_color</item>
        <item name="colorPrimaryDark">@color/primary_yellow_dark</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

</resources>